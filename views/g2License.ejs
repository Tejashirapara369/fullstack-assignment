<!DOCTYPE html>
<html lang="en">

<%- include('layout/header.ejs') %>

    <body>
        <%- include('layout/nav.ejs') %>
            <main class="container">
                <h1>Welcome to G2</h1>
                <form action="/api/g2_test" method="POST" class="row mb-5">
                    <div class="col-6 col-offset-3">
                        <fieldset class="row">
                            <legend>General Information</legend>
                            <div class="form-group col-6 mb-3">
                                <label for="firstName">First Name</label>
                                <input name="firstName" id="firstName" type="text" class="form-control"
                                    placeholder="Enter First Name" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="lastName">Last Name</label>
                                <input name="lastName" id="lastName" type="text" class="form-control"
                                    placeholder="Enter Last Name" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="licenseNo">License Number</label>
                                <input name="licenseNo" id="licenseNo" type="text" class="form-control"
                                    placeholder="Enter License Number" maxlength="8" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="age">Age</label>
                                <input name="age" id="age" type="number" class="form-control"
                                    placeholder="Enter Your Age" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="dateOfBirth">Date of birth</label>
                                <input name="dateOfBirth" id="dateOfBirth" type="date" class="form-control"
                                    placeholder="Enter Your Date of Birth" required>
                            </div>
                        </fieldset>

                        <fieldset class="row">
                            <legend>Car Details</legend>
                            <div class="form-group col-6 mb-3">
                                <label for="ieMake">IE Make</label>
                                <input name="carDetails[ieMake]" id="ieMake" type="text" class="form-control"
                                    placeholder="Enter company name" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="model">Model</label>
                                <input name="carDetails[model]" id="model" type="text" class="form-control"
                                    placeholder="Enter model" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="year">Year</label>
                                <input name="carDetails[year]" id="year" type="number" class="form-control"
                                    placeholder="Enter year" required>
                            </div>
                            <div class="form-group col-6 mb-3">
                                <label for="platNumber">Plat Number</label>
                                <input name="carDetails[platNumber]" id="platNumber" type="text" class="form-control"
                                    placeholder="Enter Plat Number" required>
                            </div>
                        </fieldset>
                        <button type="submit" class="btn btn-primary col-3 mt-2">Submit</button>
                    </div>
                </form>
            </main>
    </body>

</html>